<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mrp_workcenter_planning_form_view" model="ir.ui.view">
            <field name="name">Capacity Planning</field>
            <field name="model">mrp.workcenter.planning</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="workcenter_id" options="{'no_create': True}"/>
                                <field name="workcenter_load"/>
                                <field name="person_minutes"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="mrp_workcenter_planning_tree_view" model="ir.ui.view">
            <field name="name">Capacity Planning</field>
            <field name="model">mrp.workcenter.planning</field>
            <field name="arch" type="xml">
                <tree editable="top" create="1" delete="1" multi_edit="1" sample="1">
                    <field name="date" widget="date"/>
                    <field name="workcenter_id"/>
                    <field name="workcenter_load"/>
                    <field name="person_minutes"/>
                    <field name="user_id"/>
                    <!-- <field name="week_number"/> -->
                </tree>
            </field>
        </record>

        <record id="mrp_workcenter_planning_calendar" model="ir.ui.view">
            <field name="name">mrp.workcenter.planning.calendar</field>
            <field name="model">mrp.workcenter.planning</field>
            <field name="arch" type="xml">
                <calendar string="Capacity Planning" date_start="date" mode="month" all_day="date" color="user_id">
                    <field name="user_id" filters="1" widget="many2one_avatar_user"/>
                    <field name="workcenter_id" filters="2" />
                </calendar>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_mrp_workcenter_planning_pivot">
            <field name="name">mrp.workcenter.planning.pivot</field>
            <field name="model">mrp.workcenter.planning</field>
            <field name="arch" type="xml">
                <pivot string="Capacity Planning" sample="1">
                    <field name="workcenter_id" type="col"/>
                    <field name="user_id" type="col"/>
                    <field name="date" type="row"/>
                    <field name="person_minutes" type="measure"/>
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="view_mrp_workcenter_planning_graph">
            <field name="name">mrp.workcenter.planning.graph</field>
            <field name="model">mrp.workcenter.planning</field>
            <field name="arch" type="xml">
                <graph string="Capacity Planning" sample="1">
                    <field name="workcenter_id"/>
                    <field name="person_minutes" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="view_mrp_workcenter_planning_gantt">
            <field name="name">mrp.workcenter.planning.gantt</field>
            <field name="model">mrp.workcenter.planning</field>
            <field name="arch" type="xml">
                <gantt 
                    js_class="planning_gantt"
                    string="Capacity Planning" 
                    date_start="date" date_stop="date"
                    precision="{'week': 'day:full', 'month': 'day:full', 'year': 'day:full'}"
                    total_row="True" scales="week,month,year"
                    default_group_by="workcenter_id" 
                    color="user_id"
                    plan="false" 
                    display_unavailability="1" sample="1">
                </gantt>
            </field>
        </record>



        <record id="mrp_workcenter_planning_action" model="ir.actions.act_window">
            <field name="name">Capacity Planning</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.workcenter.planning</field>
            <field name="view_mode">tree,form,calendar,pivot,graph,gantt</field>
        </record>


        <menuitem id="mrp_workcenter_planning_menu"
            name="Capacity Planning"
            action="mrp_workcenter_planning_action"
            parent="mrp.mrp_planning_menu_root"
            groups="mrp.group_mrp_manager"
            sequence="10"/>
    </data>
</odoo>
