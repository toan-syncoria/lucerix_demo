<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_production_workorder_form_view_timeline_codes_inherit" model="ir.ui.view">
            <field name="name">mrp.production.work.order.tree.timeline.codes.inherit</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
            <field name="arch" type="xml">
            <!-- time_ids (mrp.workcenter.productivity) -->
                <xpath expr="//page[@name='time_tracking']/group/field[@name='time_ids']/tree/field[@name='loss_id']" position="after">
                    <field name="timeline_codes_id" groups="mrp.group_mrp_manager"/>
                </xpath>
                <xpath expr="//field[@name='duration_expected']" position="after">
                    <field name="timeline_codes_id" groups="mrp.group_mrp_manager"/>
                </xpath>
                <xpath expr="//page[@name='time_tracking']/group/field[@name='time_ids']/tree/field[@name='duration']" position="after">
                    <field name="break_duration" widget="float_time" sum="Total break duration" groups="mrp.group_mrp_manager"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_workorder_view_form_tablet_inherit" model="ir.ui.view">
            <field name="name">mrp.workorder.view.form.inherit.quality.tablet.inherit</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp_workorder.mrp_workorder_view_form_tablet"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_pending']" position="replace">
                    <button name="action_add_pause_reason" type="object" class="btn-secondary mr8" attrs="{'invisible': ['|', ('is_user_working', '=', False), ('working_state', '=', 'blocked')]}" barcode_trigger="pause" string="Pause"/>
                </xpath>
            </field>
        </record>
        <record id="mrp_production_workorder_tree_editable_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.work.order.tree.editable.inherit</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_editable_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_pending']" position="replace">
                    <button name="action_add_pause_reason" type="object" string="Pause" class="btn-warning"
                        attrs="{'invisible': ['|', '|', ('production_state', 'in', ('draft', 'done')), ('working_state', '=', 'blocked'), ('is_user_working', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        
    </data>
</odoo>
