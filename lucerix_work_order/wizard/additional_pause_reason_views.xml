<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_workorder_additional_pause_reason_wizard" model="ir.ui.view">
        <field name="name">MRP Additional Pause Reason</field>
        <field name="model">mrp_workorder.additional.pause.reason</field>
        <field name="arch" type="xml">
            <form string="Add Pause Reason">
                <group>
                    <field name="timeline_codes_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="add_pause_reason" type="object" string="Submit" class="btn-primary"/>
                    <button string="Discard" class="btn-default btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
